<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:padding="15dp"
        android:id="@+id/maalestasjon_element"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
    >

        <TextView
                android:id="@+id/addborder"
                android:layout_width="375dp"
                android:layout_height="75dp"
                android:background="@drawable/btn_partikler"
                android:textSize="16dp"
                android:layout_marginLeft="1dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_alignParentStart="true"/>

        <View android:id="@+id/color_view"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_alignParentTop="true"
              android:background="#9EFDBF"
              android:visibility="visible"
              android:layout_marginLeft="45dp"
              android:layout_marginTop="22dp"

        />


        <TextView
                android:id="@+id/text_title_position"
                android:layout_width="270dp"
                android:layout_height="49dp"
                android:layout_marginTop="12dp"
                android:text="Title"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/color_view"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:maxLines="1"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:layout_marginStart="118dp"
                android:layout_marginLeft="43dp"/>

        <TextView
                android:id="@+id/text_description_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_title"
                android:layout_toRightOf="@+id/color_view"
                android:textAlignment="center"
                android:text="Descrption"
                android:textSize="14dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="43dp"/>

        <TextView
                android:id="@+id/text_value_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_title"
                android:layout_toRightOf="@+id/color_view"
                android:textAlignment="center"
                android:text="µg/m³"
                android:textSize="14dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="37dp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
